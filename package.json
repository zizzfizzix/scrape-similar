{
  "name": "modern-scraper",
  "displayName": "Modern Scraper",
  "version": "0.1.0",
  "author": "Kuba Serafinowski",
  "description": "Modern Chrome extension to extract data from web pages into spreadsheets.",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "react",
    "vite",
    "create-chrome-ext"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "fmt": "prettier --write '**/*.{tsx,ts,json,css,scss,md}'",
    "zip": "npm run build && node src/zip.js",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@babel/plugin-transform-typescript": "^7.27.0",
    "@crxjs/vite-plugin": "^2.0.0-beta.32",
    "@types/chrome": "^0.0.315",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "gulp": "^5.0.0",
    "gulp-zip": "^6.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  }
}
